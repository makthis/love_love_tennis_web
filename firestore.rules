rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid}/{documents=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }


    match /tennis_courts/{documents=**} {
      allow read, write: if request.auth != null;
    }

    match /matches/{documents=**} {
      allow read, create: if request.auth !=null;
      allow delete:  if request.auth !=null && request.auth.host == resource.data.host;
      allow update:   if request.auth !=null && request.auth.uid == resource.data.host;
      allow update: if request.auth.uid in resource.data.invitees || request.auth.uid in resource.data.participants;
    }

    match /matches/{matchName}/love_notes/{documents=**} {
        allow read, create: if request.auth != null && request.auth.uid in matchName.data.invitees;
      }
    }
  }